<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_main" >

    <ScrollView
        android:id="@+id/scv_earth"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_earth"
                android:layout_width="@dimen/width_loading_earth"
                android:layout_height="@dimen/height_loading_earth"
                android:layout_marginLeft="@dimen/marginLeft_loading_surper"
                android:layout_marginTop="@dimen/marginTop_loading_surper"
                android:src="@drawable/ic_loading_earth" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/width_loading_logo"
            android:layout_height="@dimen/height_loading_logo"
            android:src="@drawable/ic_aph_logo" />

        <ImageView
            android:id="@+id/iv_surper"
            android:layout_width="@dimen/width_loading_surper"
            android:layout_height="@dimen/height_loading_surper"
            android:layout_marginTop="@dimen/margintop_loading_surper"
            android:src="@drawable/ic_loading_surper" />
    </LinearLayout>

</RelativeLayout>