<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_music_pannel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_common_music_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/width_common_music_frame"
        android:layout_height="@dimen/height_common_music_frame"
        android:layout_marginLeft="@dimen/marginleft_common_music_frame" >

        <ImageView
            android:layout_width="@dimen/height_common_music_icon_frame"
            android:layout_height="@dimen/height_common_music_icon_frame"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_cd_frame" />

        <ImageView
            android:id="@+id/iv_music_icon"
            android:layout_width="@dimen/width_common_music_icon"
            android:layout_height="@dimen/height_common_music_icon"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/marginleft_common_music_icon"
            android:src="@drawable/ic_cd1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginleft_common_music_frame"
        android:layout_weight="3"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="@dimen/textSize_common_music_name" />

        <TextView
            android:id="@+id/tv_music_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/textSize_common_music_type" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_music_prior"
            android:layout_width="@dimen/width_common_music_button"
            android:layout_height="@dimen/width_common_music_button"
            android:background="@drawable/ic_common_music_prior" />

        <ImageView
            android:id="@+id/iv_music_play"
            android:layout_width="@dimen/width_common_music_button"
            android:layout_height="@dimen/width_common_music_button"
            android:layout_marginLeft="@dimen/marginleft_common_music_button"
            android:background="@drawable/ic_common_music_play" />

        <ImageView
            android:id="@+id/iv_music_next"
            android:layout_width="@dimen/width_common_music_button"
            android:layout_height="@dimen/width_common_music_button"
            android:layout_marginLeft="@dimen/marginleft_common_music_button"
            android:background="@drawable/ic_common_music_next" />
    </LinearLayout>

</LinearLayout>